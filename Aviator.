<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aviator Game</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            padding: 20px;
        }
        #game-log {
            max-height: 300px;
            overflow-y: auto;
            margin: 10px auto;
            padding: 10px;
            border: 1px solid #ccc;
            background-color: #f9f9f9;
            text-align: left;
        }
        button {
            padding: 10px 20px;
            margin: 10px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h1>لعبة Aviator</h1>
    <div>
        <p>رصيدك الحالي: <span id="balance">100</span>$</p>
        <input type="number" id="bet" placeholder="أدخل قيمة رهانك" />
        <button onclick="startGame()">ابدأ اللعبة</button>
    </div>
    <div id="game-log"></div>
    <script>
        let balance = 100; // الرصيد الحالي

        function calculateCrashPoint() {
            // توليد نقطة تصادم عشوائية بين 1.01 و10.0
            return (Math.random() * (10 - 1.01) + 1.01).toFixed(2);
        }

        function logMessage(message) {
            // إضافة رسالة إلى سجل اللعبة
            const logDiv = document.getElementById("game-log");
            const newLog = document.createElement("p");
            newLog.textContent = message;
            logDiv.appendChild(newLog);
            logDiv.scrollTop = logDiv.scrollHeight; // عرض النص الجديد مباشرة
        }

        function startGame() {
            const betInput = document.getElementById("bet");
            const bet = parseFloat(betInput.value);

            if (isNaN(bet) || bet <= 0 || bet > balance) {
                alert("الرهان غير صالح. حاول مجددًا.");
                return;
            }

            const crashPoint = parseFloat(calculateCrashPoint());
            logMessage(`🚀 الطائرة أقلعت! نقطة التصادم: ${crashPoint}x`);
            betInput.value = ""; // مسح الحقل بعد إدخال الرهان

            let currentMultiplier = 1.0;
            const interval = setInterval(() => {
                if (currentMultiplier >= crashPoint) {
                    // تحطم الطائرة
                    clearInterval(interval);
                    logMessage(`💥 الطائرة تحطمت عند: ${crashPoint}x!`);
                    balance -= bet;
                    document.getElementById("balance").textContent = balance;
                    if (balance <= 0) {
                        alert("رصيدك انتهى. حظاً أوفر!");
                    }
                    return;
                }

                // عرض المضاعف الحالي
                logMessage(`الطائرة الآن عند: ${currentMultiplier.toFixed(2)}x`);

                // خيار الانسحاب
                const cashout = confirm("هل ترغب بالانسحاب؟");
                if (cashout) {
                    clearInterval(interval);
                    const winnings = (bet * currentMultiplier).toFixed(2);
                    balance += parseFloat(winnings) - bet;
                    logMessage(`✅ انسحبت بنجاح! أرباحك: ${winnings}$`);
                    document.getElementById("balance").textContent = balance;
                    return;
                }

                currentMultiplier += 0.1; // زيادة المضاعف
            }, 200); // التحديث كل 200 مللي ثانية
        }
    </script>
</body>
</html>
